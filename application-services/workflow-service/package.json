{
  "name": "@ai-workflow-automation/workflow-service",
  "version": "1.0.0",
  "description": "Workflow Management Service",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev:service": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "dapr:start": "cross-env dapr run --app-id workflow-service --app-port 3001 --dapr-http-port 3500 --dapr-grpc-port 50001 --components-path ../../dapr/components --config ../../dapr/config/config.yaml",
    "dev": "npm-run-all --parallel dapr:start dev:service",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:e2e": "cross-env NODE_ENV=test jest --config jest.config.js --testMatch='**/*.e2e-test.ts'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rimraf dist coverage",
    "migrate": "cross-env ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:revert": "cross-env ts-node ./node_modules/typeorm/cli.js migration:revert",
    "migrate:create": "cross-env ts-node ./node_modules/typeorm/cli.js migration:create",
    "migrate:generate": "cross-env ts-node ./node_modules/typeorm/cli.js migration:generate",
    "typeorm": "cross-env ts-node ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@dapr/dapr": "^3.2.0",
    "express": "^4.18.2",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.1",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
