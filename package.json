{
  "name": "ai-workflow-automation",
  "version": "1.0.0",
  "description": "AI-Powered Workflow Automation Platform with CrewAI integration",
  "private": true,
  "workspaces": [
    "presentation",
    "application-services/*",
    "ai-layer",
    "integration"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "docker-compose -f docker/docker-compose.yml up -d && npm run dev:services",
    "test:infra": "jest --config jest.config.js tests/infrastructure.test.ts",
    "test:infra:watch": "jest --config jest.config.js tests/infrastructure.test.ts --watch",
    "dev:services": "concurrently \"npm run dev:frontend\" \"npm run dev:workflow\" \"npm run dev:ai\"",
    "dev:frontend": "cd presentation && npm run dev",
    "dev:workflow": "cd application-services/workflow-service && npm run dev",
    "dev:ai": "cd ai-layer && npm run dev",
    "build": "npm run build:all",
    "build:all": "npm run build:frontend && npm run build:services",
    "build:frontend": "cd presentation && npm run build",
    "build:services": "concurrently \"npm run build:workflow\" \"npm run build:ai\"",
    "build:workflow": "cd application-services/workflow-service && npm run build",
    "build:ai": "cd ai-layer && npm run build",
    "test": "npm run test:all",
    "test:all": "concurrently \"npm run test:frontend\" \"npm run test:services\"",
    "test:frontend": "cd presentation && npm run test",
    "test:services": "concurrently \"npm run test:workflow\" \"npm run test:ai\"",
    "test:workflow": "cd application-services/workflow-service && npm run test",
    "test:ai": "cd ai-layer && npm run test",
    "lint": "npm run lint:all",
    "lint:all": "concurrently \"npm run lint:frontend\" \"npm run lint:services\"",
    "lint:frontend": "cd presentation && npm run lint",
    "lint:services": "concurrently \"npm run lint:workflow\" \"npm run lint:ai\"",
    "lint:workflow": "cd application-services/workflow-service && npm run lint",
    "lint:ai": "cd ai-layer && npm run lint",
    "clean": "npm run clean:all",
    "clean:all": "concurrently \"npm run clean:frontend\" \"npm run clean:services\"",
    "clean:frontend": "cd presentation && npm run clean",
    "clean:services": "concurrently \"npm run clean:workflow\" \"npm run clean:ai\"",
    "clean:workflow": "cd application-services/workflow-service && npm run clean",
    "clean:ai": "cd ai-layer && npm run clean"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/axios": "^0.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "axios": "^1.6.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "author": "netstratum",
  "license": "MIT"
}
